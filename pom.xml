	<artifactId>fusion-core</artifactId>
	<version>0.14-SNAPSHOT</version>
	<name>fusion-core</name>
	<description>Routes the messages from source to target</description>
	<url>https://github.com/scoperetail-io/${project.artifactId}</url>
	<scm>
		<developerConnection>
            scm:git:git@github.com:scoperetail-io/${project.artifactId}.git
        </developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/scoperetail-io/${project.artifactId}</url>
	</scm>
	<properties>
		<httpclient.version>4.5.13</httpclient.version>
		<spring.version>2.4.5</spring.version>
		<org.mapstruct.version>1.3.1.Final</org.mapstruct.version>
		<lombok.version>1.18.12</lombok.version>
		<spotless.version>2.10.0</spotless.version>
		<fusion-shared-kernel.version>0.6</fusion-shared-kernel.version>
		<fusion-config.version>0.2</fusion-config.version>
		<fusion-messaging.version>0.12</fusion-messaging.version>
		<fusion-messaging-activemq.version>0.6</fusion-messaging-activemq.version>
		<fusion-messaging-kafka.version>0.2</fusion-messaging-kafka.version>
		<fusion-adapter-dedupe.version>0.1</fusion-adapter-dedupe.version>
		<commons-time.version>0.7</commons-time.version>
		<spring-retry.version>1.3.1</spring-retry.version>
		<sonar.exclusions>
			com/**/**Test**.java
		</sonar.exclusions>
		<sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
		<sonar.jacoco.reportPath>${project.basedir}/target/jacoco.exec</sonar.jacoco.reportPath>
		<sonar.language>java</sonar.language>
	</properties>
